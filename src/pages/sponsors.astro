---
import Layout from '../layouts/Layout.astro';
---

<Layout title="SPONSORS - The Glob">
	<div class="max-w-[960px] mx-auto py-5 px-5">
		<!-- Thank You Header -->
		<div class="bg-glob-gray p-8 mb-8">
			<div class="text-center text-glob-text">
				<p class="text-[14pt] leading-[1.5] font-bold mb-2">THANK YOU</p>
				<p class="text-[14pt] leading-[1.5] font-bold">to the following for Donations, (i.e. Financial gifts, Discounts on consumables)</p>
				<p class="text-[14pt] leading-[1.5] font-bold">and</p>
				<p class="text-[14pt] leading-[1.5] font-bold">Volunteers Time Support for establishing and operating this</p>
				<p class="text-[14pt] leading-[1.5] font-bold">Lions MY HEALTH CHECK Project.</p>
			</div>
		</div>
		
		<!-- Sponsor Lists - Two Columns -->
		<div class="grid grid-cols-2 gap-8 mb-8 max-md:grid-cols-1">
			<!-- Left Column - Lions Clubs -->
			<div class="bg-glob-gray p-6">
				<ul class="list-disc list-inside text-glob-text space-y-2">
					<li class="text-[14pt] leading-[1.5] font-bold">Ashhurst Pohangina Lion Club</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Colyton Bunnythorpe Lion Club</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Feilding Host Lion Club</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Feilding Kowhai Lion Club</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Feilding Manchester Lion Club</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Foxton Lion Club</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Heartland Lion Club</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Middle Districts Lions Club</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Rongotea & District Lion Club</li>
					<li class="text-[14pt] leading-[1.5] font-bold">TeAwahou Lion Club</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Lloyd Morgan Lions Clubs Charitable Trust</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Feilding & Districts Promotions</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Think Hauora Palmerston North</li>
				</ul>
			</div>
			
			<!-- Right Column - Businesses -->
			<div class="bg-glob-gray p-6">
				<ul class="list-disc list-inside text-glob-text space-y-2">
					<li class="text-[14pt] leading-[1.5] font-bold">Agri HQ</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Arran Farms</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Covi Insurance Feilding</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Custom Art</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Darraghs Mitre 10 Feilding</li>
					<li class="text-[14pt] leading-[1.5] font-bold">EBOS</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Manawatu District Council</li>
					<li class="text-[14pt] leading-[1.5] font-bold">M. England</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Sparex Feilding</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Smith Biomed (NZ) Ltd</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Feilding Business Initiatives</li>
					<li class="text-[14pt] leading-[1.5] font-bold">J.A.Davey Ltd</li>
					<li class="text-[14pt] leading-[1.5] font-bold">Fonterra</li>
				</ul>
			</div>
		</div>
		
		<!-- Bank Account Info -->
		<div class="bg-glob-gray p-8 text-center">
			<div class="text-glob-text">
				<p class="text-[18pt] leading-[1.5] font-bold mb-4">We appreciate your generousity.</p>
				<p class="text-[14pt] leading-[1.5] font-bold mb-4">Should you want to support us, this is our bank account.</p>
				<br />
				<p class="text-[14pt] leading-[1.5] font-bold">My Health Check. No. 03-0791-0232608-008 Westpac banking</p>
			</div>
		</div>
	</div>
</Layout>
