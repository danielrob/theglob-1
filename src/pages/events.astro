<style>
	.intro {
		font-size: 1.2rem;
		margin-bottom: 2rem;
		padding: 1rem;
		background: var(--color-bg);
		border-radius: 8px;
	}

	.upcoming {
		background: linear-gradient(135deg, #f0f7f0 0%, #e8f5e8 100%);
		border: 2px solid var(--color-accent);
	}

	.subheading {
		color: var(--color-secondary);
		font-style: italic;
		margin-bottom: 1rem;
	}

	.event-grid {
		display: grid;
		gap: 0.75rem;
	}

	.event-card {
		display: grid;
		grid-template-columns: 150px 1fr;
		gap: 1rem;
		padding: 1rem;
		background: white;
		border-radius: 6px;
		border-left: 4px solid var(--color-secondary);
		align-items: center;
	}

	.event-card.upcoming-card {
		border-left-color: var(--color-accent);
		background: linear-gradient(90deg, #f8fff8 0%, white 100%);
	}

	.event-date {
		font-weight: bold;
		color: var(--color-primary);
		white-space: nowrap;
	}

	.event-name {
		color: var(--color-text);
	}

	.event-attendees {
		grid-column: 1 / -1;
		font-size: 0.9rem;
		color: var(--color-accent);
		font-weight: 500;
	}

	@media (max-width: 600px) {
		.event-card {
			grid-template-columns: 1fr;
			gap: 0.25rem;
		}

		.event-date {
			white-space: normal;
		}
	}
</style>
