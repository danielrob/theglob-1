<Layout title="EVENTS - The Glob">
	<div class="max-w-[960px] mx-auto py-5 px-5">
		<p class="text-[1.2rem] mb-8 p-4 bg-white rounded-lg">This is a list of future and past events since 2022.</p>

		<!-- Year Navigation Links -->
		<div class="flex flex-wrap justify-center gap-4 mb-8">
			<a href="#events-2026" class="px-4 py-2 bg-glob-gold text-glob-dark font-bold rounded hover:bg-white transition-colors">2026</a>
			<a href="#events-2025" class="px-4 py-2 bg-glob-gold text-glob-dark font-bold rounded hover:bg-white transition-colors">2025</a>
			<a href="#events-2024" class="px-4 py-2 bg-glob-gold text-glob-dark font-bold rounded hover:bg-white transition-colors">2024</a>
			<a href="#events-2023" class="px-4 py-2 bg-glob-gold text-glob-dark font-bold rounded hover:bg-white transition-colors">2023</a>
			<a href="#events-2022" class="px-4 py-2 bg-glob-gold text-glob-dark font-bold rounded hover:bg-white transition-colors">2022</a>
		</div>

		<!-- 2026 Events -->
		<div id="events-2026" class="mb-8">
			<h2 class="text-[20pt] font-bold text-glob-dark mb-4 border-b-2 border-glob-gold pb-2">Events 2026</h2>
			<div class="space-y-2">
				{upcomingEvents2026.map(event => (
					<div class="grid grid-cols-[140px_1fr] gap-4 text-glob-text py-1 max-md:grid-cols-1 max-md:gap-0">
						<span class="font-bold text-glob-orange whitespace-nowrap">{event.date}</span>
