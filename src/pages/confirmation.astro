---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You">
	<div class="content-section" style="text-align: center; padding: 4rem 2rem;">
		<h1 style="color: var(--color-primary);">Thank You!</h1>
		<p style="font-size: 1.2rem; margin-top: 2rem;">Your message has been received. We'll get back to you soon.</p>
		<a href="/" style="display: inline-block; margin-top: 2rem; padding: 1rem 2rem; background: var(--color-primary); color: white; text-decoration: none; border-radius: 4px;">Return Home</a>
	</div>
</Layout>
